    <script>

            function validateAndFormatURL(url) {
      if (!url || url.length > 2048 || !/^(http|https):\/\/[^ "]+$/.test(url)) {
        return null;
      }
      return url;
    }

    function groupConsecutiveBlockquotes(lines) {
      let groupedLines = [];
      let currentGroup = [];

      lines.forEach(line => {
        if (/^>\s+/.test(line)) {
          currentGroup.push(line.substring(2).trim());
        } else {
          if (currentGroup.length > 0) {
            groupedLines.push('<blockquote>' + currentGroup.join('<br>') + '</blockquote>');
            currentGroup = [];
          }
          if (line.trim() !== '') {
            groupedLines.push(line);
          }
        }
      });

      if (currentGroup.length > 0) {
        groupedLines.push('<blockquote>' + currentGroup.join('<br>') + '</blockquote>');
      }

      return groupedLines;
    }

function updatePreview() {
    let lines = $('#description').val().split('\n');
    let groupedText = groupConsecutiveBlockquotes(lines);

    let processedText = groupedText.map(line => {
        if (line.startsWith('<blockquote>')) {
            return line;
        } else if (line.trim().startsWith('# ')) {
            return '<div class="large-text">' + line.substring(2).trim() + '</div>';
        } else {
            return line + '<br>';
        }
    }).join('');

    processedText = processedText.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>');
    processedText = processedText.replace(/\*(.*?)\*/g, '<i>$1</i>');
    processedText = processedText.replace(/__(.*?)__/g, '<u>$1</u>');

    $('#preview-description').html(processedText);

      let authorName = $('#author-name').val();
      let authorIconUrl = validateAndFormatURL($('#author-icon').val());
      let authorUrl = validateAndFormatURL($('#author-url').val());
      let footerText = $('#footer-text').val();
      let footerIconUrl = validateAndFormatURL($('#footer-icon').val());

      let imageUrl = validateAndFormatURL($('#image-url').val());
      let thumbnailUrl = validateAndFormatURL($('#thumbnail-url').val());

      if (authorUrl) {
        $('#preview-author-name').html('<a href="' + authorUrl + '" target="_blank" style="color: inherit;">' + authorName + '</a>');
      } else {
        $('#preview-author-name').text(authorName);
      }

      $('#preview-author-icon').attr('src', authorIconUrl || '').toggle(!!authorIconUrl);

      $('#preview-footer-text').text(footerText);

      $('#preview-footer-icon').attr('src', footerIconUrl || '').toggle(!!footerIconUrl);

      $('#preview-image').attr('src', imageUrl || '').toggle(!!imageUrl);

      $('#preview-thumbnail').attr('src', thumbnailUrl || '').toggle(!!thumbnailUrl);

      $('#preview-title').text($('#title').val());

if ($('#timestamp').is(':checked')) {
      let now = new Date();
      let hours = now.getHours().toString().padStart(2, '0');
      let minutes = now.getMinutes().toString().padStart(2, '0');
      let formattedTime = `â€¢ Today at ${hours}:${minutes}`;
      $('#preview-timestamp').html(formattedTime).css('color', '#dddddd');
    } else {
      $('#preview-timestamp').html('');
    }
 
      $('#preview-container').css('border-left', '4px solid ' + $('#color').val());
     }
 



    // Function to post the embed
$('#post-embed').click(function() {
  var description = $('#description');
  if (!description.val().trim()) {
    $('#descriptionFeedback').show();
    description.addClass('is-invalid');
    return;
  } else {
    $('#descriptionFeedback').hide();
    description.removeClass('is-invalid');
  }

      let authorIconUrl = validateAndFormatURL($('#author-icon').val());
      let footerIconUrl = validateAndFormatURL($('#footer-icon').val());
      let imageUrl = validateAndFormatURL($('#image-url').val());
      let thumbnailUrl = validateAndFormatURL($('#thumbnail-url').val());

      // Embed data structure
      const embedData = {
        channelId: $('#channel').val(),
        title: $('#title').val(),
        description: $('#description').val(),
        color: $('#color').val().slice(1),
        authorName: $('#author-name').val(),
        authorUrl: validateAndFormatURL($('#author-url').val()),
        authorIconUrl: authorIconUrl,
        imageUrl: imageUrl,
        thumbnailUrl: thumbnailUrl,
        footerText: $('#footer-text').val(),
        footerIconUrl: footerIconUrl,
        timestamp: $('#timestamp').is(':checked') ? new Date().toISOString() : null
      };

fetch('/embed/create', {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
    },
    body: JSON.stringify(embedData),
})
    .then(response => response.json()) 
    .then(data => {
        $('#successModal').modal('show');
    })
    .catch(error => {
        console.error('Error:', error);
    });
    });
    $(document).ready(function() {
      $('.form-control').on('input change', updatePreview);

      $('#timestamp').change(function() {
        updatePreview();
      });

      updatePreview();

      fetch('/embed/channels')
        .then(response => response.json())
        .then(data => {
          const channelSelect = $('#channel');
          data.channels.forEach(channel => {
            channelSelect.append(new Option(channel.name, channel.id));
          });
        })
        .catch(error => console.error('Error fetching channels:', error));
    });
</script>
